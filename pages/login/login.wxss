/* login.wxss */
.container {
  text-align: center;
  padding: 20px;
}

.header {
  font-size: 24px;
  margin-bottom: 20px;
}

.main {
  margin: 20px 0;
}

input {
  display: block;
  width: 80%;
  padding: 10px;
  margin: 10px auto;
  border: 1px solid #ccc;
  border-radius: 5px;
}

button {
  display: block;
  width: 80%;
  padding: 10px;
  margin: 10px auto;
  font-size: 16px;
  cursor: pointer;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
}
